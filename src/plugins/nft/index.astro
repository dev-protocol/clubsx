---
import type { Membership } from '@plugins/memberships'
import Hero from '@components/Hero/hero'
import Hero2 from '@components/Hero/hero2'
import Cards from '@components/list/cards'

const { products, coverImgSrc, title, description, projectName, avatarImgSrc } =
  Astro.props as {
    products: Membership[]
    coverImgSrc: string
    title: string
    description: string
    avatarImgSrc: string
    projectName: string
  }
---

<div class="container mx-auto grid gap-8 md:gap-16">
  <Hero projectName={projectName} coverImgSrc={coverImgSrc} />
  <Hero2
    title={title}
    description={description}
    projectName={projectName}
    avatarImgSrc={avatarImgSrc}
  />
  <Cards products={[...products]} />
</div>
