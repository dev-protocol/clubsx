---
import Web3AuthButton_ from './components/Web3AuthButton.vue'
import type { Web3AuthButtonOptions } from './types.ts'

type Props = Web3AuthButtonOptions

const props = Astro.props

const {
  PUBLIC_WEB3AUTH_CLIENT_ID,
  PUBLIC_WEB3AUTH_NETWORK,
  PUBLIC_INFURA_KEY,
} = import.meta.env
---

<Web3AuthButton_
  client:load
  {...props}
  web3authClientId={PUBLIC_WEB3AUTH_CLIENT_ID}
  web3authNetwork={PUBLIC_WEB3AUTH_NETWORK}
  web3authInfuraKey={PUBLIC_INFURA_KEY}
/>
