---
import ClubsColor from '@assets/clubs--color.svg'
import type { ClubsPropsPages } from '@devprotocol/clubs-core'

const { connection = true } = Astro.props as ClubsPropsPages & {
  connection?: boolean
}
---

<header class="absolute z-10 flex w-full items-center">
  <a
    href="https://www.clubs.place/"
    class="group absolute left-0 top-0 m-4 flex items-center justify-center gap-2"
    ><span
      class="flex h-12 w-12 items-center justify-center rounded-full bg-surface-200"
      ><img src={ClubsColor.src} class="h-6 w-6" /></span
    ><span
      class="pointer-events-none text-xl font-bold opacity-0 transition group-hover:opacity-100"
      >Clubs</span
    ></a
  >
  <div
    class="container mx-auto flex max-w-7xl items-center justify-between px-6 xl:px-0"
  >
    <i class="h-20" role="presentation"></i>
    {connection && <slot name="header:connect-button" />}
  </div>
</header>
