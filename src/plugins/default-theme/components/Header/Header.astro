---
import ClubsColor from '@assets/clubs--color.svg'
import ConnectButton from '@components/Wallet/ConnectButton.vue'

const { chainId } = Astro.props as {
  chainId: number
}
---

<header class="absolute z-10 flex w-full items-center">
  <span
    class="absolute left-0 top-0 flex h-16 w-16 items-center justify-center bg-surface-200"
    ><img src={ClubsColor} class="h-8 w-8" /></span
  >
  <div
    class="container mx-auto flex max-w-7xl items-center justify-between px-6 xl:px-0"
  >
    <i class="h-16" role="presentation"></i>
    <ConnectButton client:only="vue" chainId={chainId} type="filled" />
  </div>
</header>
