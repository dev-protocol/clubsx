---
import AdminCommunityForm from './components/AdminCommunityForm.svelte'

const { options, clubs } = Astro.props
const guildUrl = options.find(
  (option: { key: string; value: string }) => option.key === 'guildUrl'
)
---

<div>
  <h1 class="mb-16 font-title text-lg font-bold">Community</h1>

  <AdminCommunityForm
    client:only="svelte"
    guildUrl={guildUrl?.value ?? ''}
    currentPluginIndex={clubs.currentPluginIndex}
  />
</div>
