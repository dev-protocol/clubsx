---
import JoinCheckout from '@components/Join/JoinCheckout.vue'
import { Product } from '@constants/products'

const { propertyAddress, product, rpcUrl } = Astro.props as {
  propertyAddress: string
  product: Product
  rpcUrl: string
}
---

<JoinCheckout
  client:only
  amount={product.price}
  destination={propertyAddress}
  currency={'ETH'}
  page="BUY"
  feeBeneficiary={product.fee?.beneficiary}
  feePercentage={product.fee?.percentage}
  payload={product.payload}
  rpcUrl={rpcUrl}
/>
