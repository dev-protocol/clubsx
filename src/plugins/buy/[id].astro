---
import Checkout from '@components/Checkout/Checkout.astro'
import type { Product } from '@constants/products'

const { propertyAddress, product, rpcUrl, ...others } = Astro.props as {
  propertyAddress: string
  product: Product
  rpcUrl: string
}
---

<Checkout
  amount={product.price}
  destination={propertyAddress}
  currency={product.currency}
  feeBeneficiary={product.fee?.beneficiary}
  feePercentage={product.fee?.percentage}
  payload={product.payload}
  rpcUrl={rpcUrl}
  description={product.description}
  {...others}
/>
