---
import Navbar from '@components/Global/Navbar.vue'
import { connectionId } from '@constants/connection'
import { tenants } from '@constants/tenants'
import { tenantBy } from '@fixtures/data/tenants'
import og from '@assets/og.png'
import '@styles/global.scss'

const { metaTitle } = Astro.props

const tenant = Astro.params.site ? tenantBy(Astro.params) : tenants[0]

if (!tenant) {
  throw new Error('No tenant found')
}

const title = metaTitle ? `${tenant.name} : ${metaTitle}` : tenant.name

const ogURL = new URL(
  Astro.url.pathname.replace(/(.*)\/$/, '$1') + og,
  Astro.site ?? 'http://localhost'
)
---

<!DOCTYPE html>
<html class="dark" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="description" content={`${tenant.description}`} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content={`${ogURL}`} />
    <meta property="og:description" content={tenant.description} />
    <meta property="og:site_name" content={tenant.name} />
    <meta name="twitter:site" content={tenant.twitterHandle} />
    <meta name="twitter:creator" content={tenant.twitterHandle} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={tenant.description} />
    <meta name="twitter:image" content={`${ogURL}`} />
  </head>

  <body class="font-body bg-black text-white min-h-screen">
    <script
      type="module"
      src="https://cdn.jsdelivr.net/npm/@devprotocol/elements@0.0.5/bundled/dev-connection.mjs"
    ></script>
    <Navbar client:only="vue" tenantName={tenant?.name} />
    <main>
      <slot />
    </main>
    <dev-connection id={connectionId} />
  </body>
</html>
