---
import Layout from '@layouts/LandingWithFooter.astro'
import { ConnectButton } from '@devprotocol/clubs-plugin-awesome-onboarding'
import SignInRedirection from '@components/SignInForm/SignInRedirection.vue'
import { CookieKey } from '@constants/cookie'

const userFromCookie = Astro.cookies.get(CookieKey.User)
---

<Layout connectButton="hidden" theme="light">
  <div class="relative grid gap-16 content-between justify-center p-4 md:p-0">
    <span>
      <section class="my-16 grid gap-8 text-center md:my-32">
        <h1 class="text-2xl font-bold md:text-5xl">Sign in to Clubs</h1>
      </section>

      <section class="grid gap-12">
        <div class="flex flex-col items-center">
          <ConnectButton />
          <SignInRedirection client:only="vue" />
        </div>
      </section>
    </span>
  </div>
</Layout>
