---
import Layout from '@layouts/Default.astro'

import JoinCheckout from '@components/Join/JoinCheckout.vue'
import { tiers } from '@constants/tier'
import { getStaticPaths as tenantStaticPaths } from '@fixtures/router/tenants'
import { tenantBy } from '@fixtures/data/tenants'

export function getStaticPaths() {
  return tiers.map(({ id }) => ({ params: { id } }))
}

const { id } = Astro.params
const tier = tiers.find(({ id: _id }) => _id === id)

tenantStaticPaths()
const tenant = tenantBy(Astro.params)
---

<Layout metaTitle="join checkout">
  <JoinCheckout
    client:only
    amount={tier?.amount}
    destination={tenant?.propertyAddress}
    currency={'DEV'}
    page="JOIN"
  />
</Layout>
