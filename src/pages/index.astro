---
import Landing from '@layouts/Landing.astro'
import HSButton from '@components/Primitives/Hashi/HSButton.vue'
import CLBButton from 'node_modules/@devprotocol/clubs-core/src/ui/vue/CLBButton.vue'

import HeroMedia from '@assets/Hero.png'
import StarterKits from '@assets/starter-kits.png'

// import R1 from '@assets/Rectangle1.png'
// import R2 from '@assets/Rectangle2.png'
// import R3 from '@assets/Rectangle3.png'
// import R4 from '@assets/Rectangle4.png'

import A1 from '@assets/Article1.png'
import A2 from '@assets/Article2.png'
import A3 from '@assets/Article3.png'

import CSM1 from '@assets/CaseStudyMedia1.png'
import CSM2 from '@assets/CaseStudyMedia2.png'
import CSM3 from '@assets/CaseStudyMedia3.png'
---

<Landing connectButton="hidden">
  <HSButton slot="right" type="filled white" link="#">Sign-in</HSButton>
  <section class="clb-hero py-16 xl:py-28 2xl:py-40">
    <img
      src={HeroMedia}
      aria-hidden="true"
      alt="Hero media."
      class="clb-hero__media"
    />
    <div class="clb-hero__section">
      <h1
        class="clb-hero__tagline mb-6 text-3xl font-black leading-[1.5] lg:text-6xl 2xl:text-8xl"
      >
        Bring your community to <span
          class="bg-[url('/WhitePurpleAbstract.png')] bg-clip-text bg-center text-3xl font-bold text-transparent lg:text-6xl 2xl:text-8xl"
          >web3</span
        ><br /> in one minute.
      </h1>
      <CLBButton type="filled large" link="#sales-pitch">
        Get started for free
      </CLBButton>
    </div>
  </section>
  <section class="content-wrap">
    <section id="sales-pitch">
      <div
        id="features"
        class="grid grid-cols-2 gap-3 text-xl text-white md:grid-cols-3 lg:grid-cols-4"
      >
        <div class="sales-pitch-card bg-[rgb(45,39,220)]">
          <!-- <img src={R1} class="sales-pitch-card__media" alt="Rectangle 1" /> -->
          <h3 class="text-center font-bold">Build an online community space</h3>
        </div>
        <div class="sales-pitch-card bg-[rgb(0,172,148)]">
          <!-- <img src={R2} class="sales-pitch-card__media" alt="Rectangle 1" /> -->
          <h3 class="text-center font-bold">Tokenize my idea/project</h3>
        </div>
        <div class="sales-pitch-card bg-[rgb(22,20,129)]">
          <!-- <img src={R3} class="sales-pitch-card__media" alt="Rectangle 1" /> -->
          <h3 class="text-center font-bold">Gain access to DeFi funding</h3>
        </div>
        <div class="sales-pitch-card bg-[rgb(201,53,116)]">
          <!-- <img src={R4} class="sales-pitch-card__media" alt="Rectangle 1" /> -->
          <h3 class="text-center font-bold">
            Provide perks & rewards structure
          </h3>
        </div>
      </div>
      <div class="grid py-16 md:grid-cols-[3fr_2fr]">
        <div>
          <h2 class="text-4xl font-bold">
            My no-code <span
              class="bg-[url('/LightBlueGradient.png')] bg-cover bg-clip-text bg-center text-4xl font-bold text-[rgba(0,208,253,0.4)]"
              >DAO</span
            > starter-kit
          </h2>
          <p class="my-6 text-2xl">
            Giving creators and communities <br /><span
              class="bg-[url('/LightBlueGradient.png')] bg-cover bg-clip-text bg-center text-2xl font-bold text-[rgba(0,82,255,0.4)]"
              >web3 super powers</span
            >.
          </p>
          <CLBButton type="filled large" link="#how-to-start">
            Get started for free
          </CLBButton>
        </div>
        <img
          class=""
          aria-hidden="true"
          src={StarterKits}
          alt="Starter kits."
        />
      </div>
    </section>
  </section>
  <div id="use-cases" class="bg-black/10 py-[3rem] dark:bg-white/10">
    <section class="content-wrap">
      <h2 class="mb-3 text-center text-3xl font-bold">Clubs use cases</h2>
      <p class="text-center">
        Explore how creators access sustainable funding & support with Clubs.
      </p>
      <div class="mt-4 grid grid-cols-1 gap-3 md:grid-cols-2 lg:grid-cols-3">
        <a
          href="https://medium.com/devprtcl/the-future-of-fundraising-daos-with-clubs-8433029af141"
        >
          <div class="use-case">
            <img src={A1} alt="Article 1" class="use-case__media" />
            <p class="mb-1 font-bold">
              The Future of fundraising DAOs, with Clubs
            </p>
            <p class="underline">Read more...</p>
          </div>
        </a>
        <a
          href="https://medium.com/devprtcl/the-future-of-fundraising-daos-with-clubs-8433029af141"
        >
          <div class="use-case">
            <img src={A2} alt="Article 1" class="use-case__media" />
            <p class="mb-1 font-bold">
              The Future of fundraising DAOs, with Clubs
            </p>
            <p class="underline">Read more...</p>
          </div>
        </a>
        <a
          href="https://medium.com/devprtcl/the-future-of-fundraising-daos-with-clubs-8433029af141"
        >
          <div class="use-case">
            <img src={A3} alt="Article 1" class="use-case__media" />
            <p class="mb-1 font-bold">
              The Future of fundraising DAOs, with Clubs
            </p>
            <p class="underline">Read more...</p>
          </div>
        </a>
      </div>
    </section>
  </div>
  <div id="how-to-start" class="py-[3rem]">
    <section class="content-wrap">
      <h2 class="mb-3 text-center text-3xl font-bold">How to start Clubs?</h2>
      <p class="text-center">
        Wonder how can Clubs help you? Have a look at these sample case studies
        today.
      </p>
      <div class="dp-video-embed my-3 grid place-items-center">
        <iframe
          src="https://www.youtube.com/embed/WgDAezl1RrQ"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
        >
        </iframe>
      </div>
      <div class="mt-4 grid grid-cols-1 gap-3 md:grid-cols-2 lg:grid-cols-3">
        <a
          href="https://drive.google.com/file/d/1ONyN66UniFTR-fqjWzySfPuXAMd17jam/view?usp=share_link"
        >
          <div class="use-case">
            <img src={CSM1} alt="Article 1" class="use-case__media" />
            <p class="mb-1 font-bold">Case 1: Bakery owner</p>
          </div>
        </a>
        <a
          href="https://drive.google.com/file/d/1CfyuMjIQb3638iIPod7ApeWNXwgBtDaa/view?usp=share_link"
        >
          <div class="use-case">
            <img src={CSM2} alt="Article 1" class="use-case__media" />
            <p class="mb-1 font-bold">Case 2: Yoga teacher</p>
          </div>
        </a>
        <a
          href="https://drive.google.com/file/d/12kl50AYfsJCScvG48fHX8_ZymduulfeC/view?usp=share_link"
        >
          <div class="use-case">
            <img src={CSM3} alt="Article 1" class="use-case__media" />
            <p class="mb-1 font-bold">Case 3: Crowdfunding</p>
          </div>
        </a>
      </div>
    </section>
  </div>

  <div id="all-set" class="bg-native-blue-400 py-[3rem]">
    <section class="content-wrap flex flex-col justify-center">
      <h2 class="mb-3 text-center text-3xl font-bold">You're all set!</h2>
      <p class="mb-3 text-center">
        It's easy, free, and all in one place. Let's build together in web3!
      </p>
      <div id="all-set__actions">
        <CLBButton link="/getstarted" type="filled large">
          Get started!
        </CLBButton>
      </div>
    </section>
  </div>
</Landing>

<style lang="scss">
  @use 'node_modules/@devprotocol/hashi';
  @use 'sass:meta';

  @mixin responsive-img($position: null, $z-index: null) {
    width: 100%;
    height: 100%;
    @if meta.type-of($position) != null {
      position: $position;
    }
    object-fit: cover;
    object-position: center;
    @if meta.type-of($z-index) != null {
      z-index: $z-index;
    }
    user-select: none;
  }

  .content-wrap {
    width: calc(100% - 50px);
    max-width: 1077px;
    margin: 0 auto;
  }

  .clb-hero {
    width: 100%;
    height: 100%;
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;

    .clb-hero__media {
      width: 100%;
      height: 100%;
      position: absolute;
      object-fit: cover;
      object-position: center;
      user-select: none;
      cursor: default;
    }

    .clb-hero__section {
      width: calc(100% - 50px);
      max-width: 1077px;
      margin: 0 auto;
      padding: 3rem 0;
      position: relative;

      .clb-hero__tagline {
        color: rgba(#fff, 90%);
        text-shadow: 0 0.3rem 0.5rem rgba(0, 0, 0, 0.2);
      }
    }
  }

  #sales-pitch {
    padding: 3rem 0;
  }

  .sales-pitch-card {
    width: 100%;
    height: 200px;
    display: grid;
    place-content: center;
    position: relative;
    border-radius: 0.5rem;
    overflow: hidden;
    justify-content: center;
    align-items: center;
    padding: 1rem;

    .sales-pitch-card__media {
      width: 100%;
      height: 100%;
      position: absolute;
      object-fit: cover;
      object-position: center;
      user-select: none;
    }
  }

  #features {
    width: 100%;
    height: 100%;
    margin: 0 auto 3rem;
  }

  .use-case {
    width: 100%;
    transition: all var(--hs-transition-time) ease;
    padding: 1rem;
    border-radius: 0.5rem;

    &:hover,
    &:focus {
      background: rgba(#000, 20%);
      // box-shadow: 0 0.3rem 0.5rem rgba(0, 0, 0, 0.2);

      @media (prefers-color-scheme: dark) {
        background: rgba(#fff, 20%);
        // box-shadow: 0 0.3rem 0.5rem rgba(255, 255, 255, 0.2);
      }
    }

    &:active {
      background: rgba(#000, 33%);
      // box-shadow: 0 0.5rem 0.7rem rgba(0, 0, 0, 0.2);

      @media (prefers-color-scheme: dark) {
        background: rgba(#fff, 33%);
        // box-shadow: 0 0.5rem 0.7rem rgba(255, 255, 255, 0.2);
      }
    }

    .use-case__media {
      width: 100%;
      height: 150px;
      object-fit: cover;
      object-position: center;
      border-radius: 0.5rem;
      margin-bottom: 0.7rem;

      @media screen and (min-width: 540px) {
        height: 250px;
      }
    }
  }

  .dp-video-embed {
    position: relative;
    margin: 1.5rem auto;
    padding-bottom: 56.25%;
  }

  .dp-video-embed iframe {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  #all-set {
    &__actions {
      display: flex;
      flex-flow: row nowrap;
      justify-content: center;

      & > * {
        max-width: max-content;
      }
    }
  }
</style>
