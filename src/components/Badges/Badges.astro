---
import Badge from './Badge.vue'
---

<div class='bg-cover bg-center'>
  <h2 class='mb-8 text-2xl'>Badges</h2>
  <div
    class='
      grid
      gap-8
      md:grid-cols-3
      items-center
      justify-center
      md:text-left
      p-4
      text-black
      dark:text-white
      border
      border-dp-black-200
      rounded
    '
  >
    <div class='h-full grid justify-items-start'>
      <a href='/quests/quest_starter'>
        <div class='max-w-xl'>
          <Badge title='Awesomer' badgeImageSrc='/assets/badge1.png' />
        </div>
      </a>
    </div>
    <div class='h-full grid justify-items-start'>
      <a href='/quests/quest_stake_100'>
        <div class='max-w-xl'>
          <Badge
            title='Become the first 30 starters'
            badgeImageSrc='/assets/badge2.png'
          />
        </div>
      </a>
    </div>
  </div>
</div>
