---
import logo from '@assets/devlogo.svg'

const url: string = Astro.url.pathname

const footerAccent: Record<string, string> = {
  '/': 'native-blue',
}

const getColor = (): string => {
  return footerAccent[url] ? `is-${footerAccent[url]}` : ''
}
---

<footer class="grid justify-items-center py-32 lg:py-56">
  <section
    class="container mx-auto grid items-center gap-16 px-4 sm:grid-flow-col sm:justify-items-center"
  >
    <div>
      <p class="flex items-center gap-2 text-2xl font-bold">
        Build with <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z"
          ></path>
        </svg> Clubs
      </p>
      <p>
        <a
          class={`hs-link ${getColor()} font-mono text-xs text-white`}
          href="https://github.com/dev-protocol/clubs"
          target="_blank"
          rel="norefferer noopener"
          >https://github.com/dev-protocol/clubs
        </a>
      </p>
      <p
        class="before:inline-block before:w-4 before:animate-c-bash-spinner before:content-['']"
      >
        <span class="font-body text-xs"
          >Create tokens, bring people together and drive community growth.
        </span>
      </p>
    </div>
    <div>
      <p class="mb-4 font-body text-lg">Where your economy grows with DAOs</p>
      <p>
        <a
          href="https://devprotocol.xyz"
          target="_blank"
          rel="norefferer noopener"
        >
          <img src={logo.src} alt="Dev Protocol" class="w-24" />
        </a>
      </p>
    </div>
  </section>
</footer>
