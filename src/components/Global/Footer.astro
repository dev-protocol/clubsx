---
const url: string = Astro.url.pathname

const footerAccent: Record<string, string> = {
  '/': 'native-blue',
}

const getColor = (): string => {
  return footerAccent[url] ? `is-${footerAccent[url]}` : ''
}
---

<footer class="my-32 lg:my-56 grid justify-items-center">
  <section
    class="container mx-auto px-4 grid gap-16 sm:grid-flow-col sm:justify-items-center items-center"
  >
    <div>
      <p class="font-bold text-2xl flex items-center gap-2">
        Build with <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z"
          ></path>
        </svg> Clubs
      </p>
      <p>
        <a
          class={`hs-link ${getColor()} font-mono text-xs`}
          href="https://github.com/dev-protocol/clubs"
          target="_blank"
          rel="norefferer noopener"
          >https://github.com/dev-protocol/clubs
        </a>
      </p>
      <p
        class="before:content-['']
        before:w-4
        before:inline-block
        before:animate-c-bash-spinner"
      >
        <span class="font-body text-xs"
          >Create tokens, bring people together and drive community growth.
        </span>
      </p>
    </div>
    <div>
      <p class="text-lg font-body mb-4">Where your economy grows with DAOs</p>
      <p>
        <a
          href="https://devprotocol.xyz"
          target="_blank"
          rel="norefferer noopener"
        >
          <img src="/assets/devlogo.svg" alt="Dev Protocol" class="w-24" />
        </a>
      </p>
    </div>
  </section>
</footer>
